<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="InputFieldStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColorHint">@color/white_60</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="Widget.AppCompat.Button" >
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>
</resources>